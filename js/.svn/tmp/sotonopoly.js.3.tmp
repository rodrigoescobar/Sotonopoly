				var pageheight = parseInt ($(document).height());
				var divwidth = parseInt (div.outerWidth());
				var divheight = parseInt (div.outerHeight());

				top = e.pageY + 10;
				left = e.pageX;
				right = left + divwidth;
				bottom = top + divheight;

				if ( right > pagewidth )
				{
					left = e.pageX - divwidth;
				}

				if ( bottom > pageheight )
				{
					top = e.pageY - divheight - 10;
				}

